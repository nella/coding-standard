<?xml version="1.0"?>
<ruleset name="Nella Project CS">
	<description>Nella Project - Coding Standard</description>

	<!-- inspired by Consistence -->

	<arg name="extensions" value="php,phpt" />

	<rule ref="../Consistence/ruleset.xml">
		<exclude name="Generic.PHP.LowerCaseConstant" /><!-- we are using UpperCase constants -->
		<exclude name="Squiz.Commenting.FunctionComment" /><!-- we are using @param docBlock without $paramName -->
	</rule>
	<rule ref="PSR1.Files.SideEffects"><!-- ignore in tests -->
		<exclude-pattern>*.phpt</exclude-pattern>
		<exclude-pattern>*/bootstrap.php</exclude-pattern>
	</rule>
	<rule ref="Squiz.Functions.GlobalFunction"><!-- ignore in tests -->
		<exclude-pattern>*.phpt</exclude-pattern>
		<exclude-pattern>*/bootstrap.php</exclude-pattern>
	</rule>
</ruleset>
